/* pages/wdqx/dec/dec.wxss */

.dec-container {
    font-weight: 600;
    color: #32c197;
}

.row {
    border-top: 1px solid #ccc;
    background-color: #fff;
    box-shadow: 0px 1px 2px;
    display: flex;
    flex: row;
}

.row .item {
    flex: 1;
    padding: 40rpx;
    padding-right: 0px; 
}
.row .item view{

    border-right: 1px solid #ccc;
}
.row .item view.line-none{
    border: none;
}
.label{
    display: block;
    margin-bottom: 10rpx;
}
.con{
    font-size: 34rpx;
    font-weight: 400;
    color: #808080;
}
.foot{
    margin-top: 20rpx;
}
