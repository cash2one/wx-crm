/* pages/home.wxss */
.home-container{
    padding: 20rpx;
}
.cat-title{
    font-size: 40rpx;
    font-weight: bold;
    color: #666666;
    margin: 20rpx auto;
    display: block;
}
.crm-items{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.crm-items view{
    flex: 1;
}
.crm-items image{
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    display: block;
}
.crm-items text{
    color: #8f8f94;
    font-size: 34rpx;
    text-align: center;
    display: block;
}
